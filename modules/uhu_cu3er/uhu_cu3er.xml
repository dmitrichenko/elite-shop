<?xml version="1.0" encoding="utf-8" ?>
<cu3er>
	<settings>
		<general 
        slide_panel_width="924" 
		slide_panel_horizontal_align="left" 
		slide_panel_vertical_align="top" 
		ui_visibility_time="2"
		/>

    	<prev_button>
			<defaults round_corners="5,5,5,5"/>
			<tweenIn x="30" />		
			<tweenOver tint="0xFFFFFF" scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</prev_button>
		
    	<prev_symbol>
			<tweenIn x="30" />		
			<tweenOver tint="0x000000" />			
		</prev_symbol>
		
    	<next_button>
			<defaults round_corners="5,5,5,5"/>	
			<tweenIn x="894" />			
			<tweenOver tint="0xFFFFFF"  scaleX="1.1" scaleY="1.1" />
			<tweenOut tint="0x000000" />
			
		</next_button>
		
    	<next_symbol>
			<tweenIn x="894" />	
			<tweenOver tint="0x000000" />
		</next_symbol>	
	<auto_play>
			<defaults symbol="circular" time="3" />
			<tweenIn x="20" y="20" width="20" height="20" tint="0xFFFFFF" />
		</auto_play>

	</settings>    

	<slides>
	
        <slide>
            <url>modules/uhu_cu3er/images/1.jpg</url>
        </slide>
		<!-- changing transition between first & second slide -->
        <transition num="3" slicing="vertical" direction="down" delay="0.2" z_multiplier="10"/>
        <slide>
       		<url>modules/uhu_cu3er/images/2.jpg</url>
        </slide>		
		<!-- changing transition between second & third slide -->
        <transition num="4" direction="right" shader="flat" delay="0.15" />
		<slide>
            <url>modules/uhu_cu3er/images/3.jpg</url>
        </slide>
        <!--<transition num="6" slicing="vertical" direction="down" delay="0.2"/>-->
		<slide>
       		<url>modules/uhu_cu3er/images/4.jpg</url>
        </slide>
		<transition num="6" slicing="vertical" direction="up" shader="flat" delay="0.05" z_multiplier="6" />
        <slide>
       		<url>modules/uhu_cu3er/images/5.jpg</url>
        </slide>

				
	</slides>
</cu3er>

